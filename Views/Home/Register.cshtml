<link rel="stylesheet" href="~/css/style.css">
<div class="text-center">
    @model User
    <h1 class="display-4">Register</h1>
    <a asp-action="LoginPage" controller="Home">Login</a>
    <form class="reggy" asp-action="Register" controller="Home" method="post">
        <label asp-for="FirstName"></label><br>
        <span class="error" asp-validation-for="FirstName"></span>
        <input class="form-control" name = "FirstName" type="text">
        <label asp-for="LastName"></label><br>
        <span class="error" asp-validation-for="LastName"></span>
        <input class="form-control" name = "LastName" type="text">
        <label asp-for="Email"></label><br>
        <span class="error" asp-validation-for="Email"></span>
        <input class="form-control" name = "Email" type="email">
        <label asp-for="Password"></label><br>
        <span class="error" asp-validation-for="Password"></span>
        <input class="form-control" name = "Password" type="password">
        <label asp-for="PwConfirm"></label><br>
        <span class="error" asp-validation-for="PwConfirm"></span>
        <input class="form-control" name = "PwConfirm" type="password">
        <button class="btn btn-primary">Register</button>
    </form>
</div>